<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TashkentMetro" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondaryContainer">@color/colorPrimary</item>
    </style>

    <style name="Theme.Intro" parent="Theme.TashkentMetro">
        <item name="android:navigationBarColor">#00656464</item>
        <item name="android:statusBarColor">#00656464</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Theme.Main" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorAccent">?attr/colorPrimary</item>
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/main_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?attr/colorSurfaceContainer</item>
    </style>
</resources>