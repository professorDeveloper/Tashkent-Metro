<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/card_background"
        android:padding="24dp">

        <!-- Close Button (Top Right) -->
        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:contentDescription="Close" />

        <!-- Crown Icon -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_crown"
            android:tint="@color/primaryColor"
            android:contentDescription="Crown Icon" />

        <!-- Title -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:text="Unlock pro access"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/onPrimary" />

        <!-- Subtitle -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:text="Get access to all of our features"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/onPrimary" />

        <!-- Features List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓ Faster result and better performance"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/onPrimary" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓ Find Nearby Stations"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/onPrimary" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓ Map Style Modification"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/onPrimary" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓ Premium Customer Support"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/onPrimary" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓ Remove ads and enjoy without any distractions"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/onPrimary" />
        </LinearLayout>

        <!-- Subscription Options -->
        <RadioGroup
            android:id="@+id/subscriptionOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/monthlySubscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monthly Subscription\nGet full access for just ₩1,100"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:buttonTint="@color/onPrimary"
                android:textColor="@color/onPrimary" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/yearlySubscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yearly Subscription\nGet full access for just ₩6,600"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:buttonTint="@color/onPrimary"
                android:textColor="@color/onPrimary" />
        </RadioGroup>

        <!-- Subscribe Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/subscribeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Subscribe Now"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@color/onPrimary"
            android:style="@style/Widget.MaterialComponents.Button" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
