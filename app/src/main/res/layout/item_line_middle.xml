<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp">

    <com.lriccardo.timelineview.TimelineView
        android:id="@+id/timeline_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center_vertical"
        app:indicator_color="#EC5656"
        app:indicator_size="@dimen/_4sdp"
        app:line_color="#EC5656"
        app:line_style="normal"
        app:line_width="@dimen/_2sdp"
        app:timeline_item_type="middle" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/station_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Chilanzar"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorGray" />


    </LinearLayout>

</LinearLayout>
